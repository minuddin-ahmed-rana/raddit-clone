<div class="page-header">
	<h1><a href="<%= @link.url %>"><%= @link.title %></a><br><small>Submitted by <%= @link.user.email %></small></h1>
</div>

<div class="btn-group">
	<%= link_to 'Visite URL', @link.url, class: 'btn btn-primary' %>
</div>

<% if current_user == @link.user %>
	<div class="btn-group">
		<%= link_to 'Edit', edit_link_path(@link), class: 'btn btn-default' %>
		<%= link_to 'Delete', @link, method: :delete, data: {confirm: 'Is that oky?'}, class: 'btn btn-default' %>
	</div>
<% end %>